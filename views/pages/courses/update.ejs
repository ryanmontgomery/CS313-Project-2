<!DOCTYPE html>

<html lang="en-us">
    <head>
        <% include ../../partials/head %>
    </head>

    <body>
        <header>
            <% include ../../partials/header %>
        </header>

        <main>
            <h2>New Course</h2>
            <div class="formArea">
                <form method="POST" action="/courses/<%= ssnSemId %>/<%= course._id %>?_method=PUT">
                    <label for="courseTitle">Course Title</label>
                    <input type="text" id="courseTitle" name="courseTitle" value="<%= course.courseTitle %>" required>
                  
                    <label for="courseName">Course Name</label>
                    <input type="text" id="courseName" name="courseName" value="<%= course.courseName %>" required>
              
                    <label for="teacher">Teacher</label>
                    <input type="text" id="teacher" name="teacher" value="<%= course.teacher %>" required>

                    <label for="credits">Credits</label>
                    <input type="number" id="credits" name="credits" value="<%= course.credits %>" min="1" max="5" required>

                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" value="<%= course.description %>">
                    
                    <label for="studentCount">Number of Students</label>
                    <input type="number" id="studentCount" name="studentCount" value="<%= course.studentCount %>" min="1" max="75" required>
                
                    <input type="submit" value="Submit">
                </form>
            </div>
        </main>

        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>