<!DOCTYPE html>

<html lang="en-us">
    <head>
        <% include ../../partials/head %>
    </head>

    <body>
        <header>
            <% include ../../partials/altheader %>
        </header>

        <main>
            <h2>Semesters</h2>
            <p class="error"><%= error %></p>
            <a href="/semesters/create">Create Semester</a><br><br>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
                <% for(var i=0; i < semesters.length; i++) { %>
                <tr>
                    <td><a href="/semesters/<%= semesters[i]._id %>"><%= semesters[i].semesterName %></a></td>
                    <td><%= dateFormat(semesters[i].startDate, "UTC:m/d/yy")  %></td>
                    <td><%= dateFormat(semesters[i].endDate, "UTC:m/d/yy") %></td>
                </tr>
                <% } %>
            </table>            
        </main>

        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>