<!DOCTYPE html>

<html lang="en-us">
    <head>
        <% include ../../partials/head %>
    </head>

    <body>
        <header>
            <% include ../../partials/altheader %>
        </header>

        <main>
            <h2>Classrooms</h2>
            <p class="error"><%= error %></p>            
            <a href="/classrooms/create">Create Classroom</a><br><br>
            <table>
                <tr>
                    <th>Room Number</th>
                    <th>Max Occupancy</th>
                    <th>Notes</th>
                </tr>
                <% for(var i=0; i < classrooms.length; i++) { %>
                <tr>
                    <td><a href="/classrooms/<%= classrooms[i]._id %>"><%= classrooms[i].roomNumber %></a></td>
                    <td><%= classrooms[i].maxOccupancy %></td>
                    <td><%= classrooms[i].notes %></td>
                </tr>
                <% } %>
            </table>
        </main>

        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html>